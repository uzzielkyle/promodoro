{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "promodoro",
  "version": "1.0.0",
  "identifier": "com.promodoro.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "promodoro",
        "width": 370,
        "height": 200,
        "resizable": false,
        "decorations": false,
        "dragDropEnabled": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
